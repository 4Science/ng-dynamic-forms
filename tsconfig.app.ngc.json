{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "paths": {
      "@ng2-dynamic-forms/*": [
        "dist/@ng2-dynamic-forms/*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "hammerjs",
      "node",
      "q"
    ]
  },
  "files": [
    "sample/app/app.module.ts",
    "sample/app/main.aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "sample/aot",
    "skipMetadataEmit": true
  }
}